<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/task_list_all">
    <fragment
        android:id="@+id/task_list_all"
        android:label="@string/menu_item_all_tasks"
        android:name="com.example.todo.view.ListFragment" >
        <argument
            android:name="filterCriteria"
            app:argType="com.example.todo.view.ListFragment$FilterCriteria"
            android:defaultValue="ALL" />
    </fragment>
    <fragment
        android:id="@+id/task_list_overdue"
        android:label="@string/menu_item_overdue"
        android:name="com.example.todo.view.ListFragment" >
        <argument
            android:name="filterCriteria"
            app:argType="com.example.todo.view.ListFragment$FilterCriteria"
            android:defaultValue="OVERDUE" />
    </fragment>
    <fragment
        android:id="@+id/task_list_completed"
        android:label="@string/menu_item_completed"
        android:name="com.example.todo.view.ListFragment" >
        <argument
            android:name="filterCriteria"
            app:argType="com.example.todo.view.ListFragment$FilterCriteria"
            android:defaultValue="COMPLETED" />
    </fragment>
</navigation>